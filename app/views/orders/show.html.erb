<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
    <p>Placed by <%= @order.email %>.</p>
    <p>Grand total: <%= humanized_money_with_symbol @order.total_cents %></p>
  </div>

  <table class="table table-bordered">
    <thead>
      <th>Quantity</th>
      <th>Item Total</th>
    </thead>
    <tbody>
      <% @order.line_items.each do |o| %>
        <%= render  "item",
            quantity: o.quantity,
            total: o.total_price_cents
        %>
      <% end %>
    </tbody>
  </table>

